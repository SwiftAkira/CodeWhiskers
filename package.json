{
  "name": "whiskercode",
  "displayName": "WhiskerCode",
  "description": "Understanding unfamiliar code through intuitive explanations with a kitten-themed UI",
  "version": "1.0.1",
  "publisher": "Swift123",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "whiskercode.explainCode",
        "title": "WhiskerCode: Explain Selected Code",
        "icon": {
          "light": "resources/light/explain.svg",
          "dark": "resources/dark/explain.svg"
        }
      },
      {
        "command": "whiskercode.traceVariable",
        "title": "WhiskerCode: Trace Variable Usage",
        "icon": {
          "light": "resources/light/trace.svg",
          "dark": "resources/dark/trace.svg"
        }
      },
      {
        "command": "whiskercode.suggestDocumentation",
        "title": "WhiskerCode: Suggest Documentation",
        "icon": {
          "light": "resources/light/document.svg",
          "dark": "resources/dark/document.svg"
        }
      },
      {
        "command": "whiskercode.analyzeFunctions",
        "title": "WhiskerCode: Analyze Functions",
        "icon": {
          "light": "resources/light/analyze.svg",
          "dark": "resources/dark/analyze.svg"
        }
      },
      {
        "command": "whiskercode.openSettings",
        "title": "WhiskerCode: Open Settings",
        "icon": {
          "light": "resources/light/settings.svg",
          "dark": "resources/dark/settings.svg"
        }
      },
      {
        "command": "whiskercode.analyzeComplexity",
        "title": "WhiskerCode: Analyze Code Complexity",
        "icon": {
          "light": "resources/light/analyze.svg",
          "dark": "resources/dark/analyze.svg"
        }
      },
      {
        "command": "whiskercode.visualizeDependencies",
        "title": "WhiskerCode: Visualize Function Dependencies",
        "icon": {
          "light": "resources/light/trace.svg",
          "dark": "resources/dark/trace.svg"
        }
      },
      {
        "command": "whiskercode.changeCatTheme",
        "title": "WhiskerCode: Change Cat Theme",
        "icon": {
          "light": "resources/light/settings.svg",
          "dark": "resources/dark/settings.svg"
        }
      },
      {
        "command": "whiskercode.detectPerformance",
        "title": "WhiskerCode: Detect Performance Hotspots",
        "icon": {
          "light": "resources/light/analyze.svg",
          "dark": "resources/dark/analyze.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && editorTextFocus",
          "command": "whiskercode.explainCode",
          "group": "WhiskerCode"
        },
        {
          "when": "editorHasSelection && editorTextFocus",
          "command": "whiskercode.traceVariable",
          "group": "WhiskerCode"
        },
        {
          "when": "editorTextFocus",
          "command": "whiskercode.analyzeComplexity",
          "group": "WhiskerCode"
        },
        {
          "when": "editorTextFocus",
          "command": "whiskercode.visualizeDependencies",
          "group": "WhiskerCode"
        },
        {
          "when": "editorTextFocus",
          "command": "whiskercode.detectPerformance",
          "group": "WhiskerCode"
        }
      ],
      "editor/title": [
        {
          "command": "whiskercode.suggestDocumentation",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java || editorLangId == csharp || editorLangId == javascriptreact || editorLangId == typescriptreact"
        },
        {
          "command": "whiskercode.analyzeFunctions",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java || editorLangId == csharp || editorLangId == javascriptreact || editorLangId == typescriptreact"
        },
        {
          "command": "whiskercode.analyzeComplexity",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java || editorLangId == csharp || editorLangId == javascriptreact || editorLangId == typescriptreact"
        },
        {
          "command": "whiskercode.visualizeDependencies",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java || editorLangId == csharp || editorLangId == javascriptreact || editorLangId == typescriptreact"
        },
        {
          "command": "whiskercode.detectPerformance",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == javascriptreact || editorLangId == typescriptreact"
        }
      ],
      "editor/title/run": [
        {
          "command": "whiskercode.explainCode",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript || editorLangId == python || editorLangId == java || editorLangId == csharp || editorLangId == javascriptreact || editorLangId == typescriptreact"
        }
      ],
      "commandPalette": [
        {
          "command": "whiskercode.changeCatTheme",
          "group": "WhiskerCode"
        }
      ]
    },
    "configuration": {
      "title": "WhiskerCode",
      "properties": {
        "whiskercode.explanationStyle": {
          "type": "string",
          "default": "conversational",
          "enum": [
            "conversational",
            "technical",
            "detailed"
          ],
          "description": "Style of code explanations"
        },
        "whiskercode.uiTheme": {
          "type": "string",
          "default": "tabby",
          "enum": [
            "tabby",
            "siamese",
            "calico",
            "black"
          ],
          "description": "Kitten theme for UI elements"
        },
        "whiskercode.animationFrequency": {
          "type": "string",
          "default": "medium",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "description": "Frequency of whisker animations"
        },
        "whiskercode.enableEmojis": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable emoji icons in the UI"
        },
        "whiskercode.enableAnimations": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable animations in the UI"
        },
        "whiskercode.enableDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable code decorations in the editor"
        },
        "whiskercode.enableAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh analysis when code changes"
        },
        "whiskercode.showCatImages": {
          "type": "boolean",
          "default": true,
          "description": "Show cat images in the explanation panels"
        },
        "whiskercode.defaultLanguageSyntax": {
          "type": "string",
          "default": "automatic",
          "enum": [
            "automatic",
            "javascript",
            "typescript",
            "python",
            "java", 
            "csharp",
            "javascriptreact",
            "typescriptreact"
          ],
          "description": "Default syntax highlighting language for code snippets"
        },
        "whiskercode.catTheme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "grumpy",
            "sleepy",
            "surprise",
            "love",
            "sassy",
            "nerd",
            "cool",
            "ninja"
          ],
          "enumDescriptions": [
            "Default cat theme",
            "Grumpy cat with attitude",
            "Sleepy, relaxed cat",
            "Surprised, wide-eyed cat",
            "Loving, heart-eyed cat",
            "Sassy, dramatic cat",
            "Nerdy, intelligent cat",
            "Cool cat with sunglasses",
            "Stealthy ninja cat"
          ],
          "description": "Choose your cat theme character"
        },
        "whiskercode.enableCatSounds": {
          "type": "boolean",
          "default": false,
          "description": "Enable cat sound effects (meows, purrs) on actions"
        },
        "whiskercode.enableSeasonalThemes": {
          "type": "boolean",
          "default": true,
          "description": "Enable seasonal themes (Halloween, Winter, etc.)"
        },
        "whiskercode.uiStyle": {
          "type": "string",
          "default": "modern",
          "enum": [
            "modern",
            "minimal",
            "playful",
            "professional"
          ],
          "enumDescriptions": [
            "Modern UI with animations and effects",
            "Minimal UI with fewer animations",
            "Playful UI with more animations and cat elements",
            "Professional UI with subtle animations"
          ],
          "description": "UI style for visualizations and explanations"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "whiskercode-sidebar",
          "title": "WhiskerCode",
          "icon": "resources/cat-icon.svg"
        }
      ]
    },
    "views": {
      "whiskercode-sidebar": [
        {
          "id": "whiskercode-explorer",
          "name": "Code Explorer"
        },
        {
          "id": "whiskercode-documentation",
          "name": "Documentation Hints"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "webpack": "webpack --mode development"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^10.3.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "vscode": "^1.1.37"
  },
  "keywords": [
    "code analysis",
    "documentation",
    "performance",
    "complexity",
    "dependencies",
    "explanation",
    "visualization",
    "productivity"
  ],
  "author": "CodeWhiskers Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codewhiskers/codewhiskers-vscode"
  },
  "bugs": {
    "url": "https://github.com/codewhiskers/codewhiskers/issues"
  },
  "homepage": "https://github.com/codewhiskers/codewhiskers#readme",
  "icon": "resources/whiskercode-icon.png",
  "galleryBanner": {
    "color": "#C6EAFA",
    "theme": "light"
  }
}
